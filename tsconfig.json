{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": ".tmp/esm/core",
        "baseUrl": ".",
        "sourceMap": true,
        "removeComments": false,
        "moduleResolution": "node",
        "declaration": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "@amm/*": ["./packages/core/*"]
        }
    },
    "angularCompilerOptions": {
        "genDir": ".tmp",
        "debug": false,
        "skipMetadataEmit": false
    },
    "exclude": [
        ".tmp"
    ],
    "include": [
        "packages/core"
    ]
}